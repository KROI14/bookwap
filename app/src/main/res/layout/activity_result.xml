<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/toolbarColor"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardViewBackground"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/bookImage"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/title_txtTitle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Title:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtAuthor"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Author:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtYrPub"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Year Published:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtYrPub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtPublisher"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Publisher:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtCallNum"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Call Number:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtCallNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtISBN"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="ISBN:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtISBN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtLang"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Language:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtLang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtLocation"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Location:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtAccession"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Accession:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtAccession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtClassification"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Classification:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtClassification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtAvail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Availability:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtAvail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/title_txtTopSub"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="2"
                    android:text="Topical Subject:"
                    android:textColor="?attr/textColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtTopSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="4"
                    android:text=""
                    android:textColor="?attr/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btnBorrow"
                android:onClick="borrowBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#fff"
                android:background="@drawable/back_button"
                android:text="Borrow Book"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>